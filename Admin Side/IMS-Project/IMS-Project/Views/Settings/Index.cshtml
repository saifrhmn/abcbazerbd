
@{
    ViewBag.Title = "Settings";
}

        <form class="form-horizontal col-md-8">
            <div class="form-group">
                <label for="webName" class="control-label col-md-4">Website Name:</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" id="webName">
                    </div>
                </div>
            <div class="form-group">
                <label for="motto" class="control-label col-md-4">Motto</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" id="motto">
                </div>
                </div>
            <div class="form-group">
                <label for="motto" class="control-label col-md-4">Theme Color:</label>
                <div class="col-md-8">
                    @Html.DropDownList("Gender", new List<SelectListItem>() {
                                        new SelectListItem(){Text="Blue",Value="Male"},
                                        new SelectListItem(){Text="Green",Value="Female"},
                                        new SelectListItem(){Text="Red",Value="Other"},
                                        new SelectListItem(){Text="Yellow",Value="Other"},
                                        new SelectListItem(){Text="Orange",Value="Other"}


                        }, "--Select color--", new { @class = "form-control" })
                </div>
                </div>

            <button type="submit" class="btn btn-primary col-lg-offset-4">Save</button>
        </form>
